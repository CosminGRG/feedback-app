@using Microsoft.AspNetCore.Authentication

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <div class="row d-flex align-items-center">
        <div class="col-auto ">
            <a class="" asp-controller="Home" asp-action="FilterFeedbackByAuthor" asp-route-author="@User?.Identity?.Name">My feedback</a>
        </div>
        <div class="col-auto p-0">
            <h6 class="mb-0">Hello, @User.Identity.Name</h6>
        </div>
        <div class="col-auto">
            <form asp-action="SignOutCurrentUser" asp-controller="Auth" method="post">
                @Html.AntiForgeryToken()
                <button id="signoutGithub" class="signoutGithub" title="Sign out"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" /><path d="M9 12h12l-3 -3" /><path d="M18 15l3 -3" /></svg></button>
            </form>
        </div>
    </div>
}
else
{
    <form asp-action="SignIn" asp-controller="Auth" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Provider" value="GitHub" />
        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
        <button id="loginGithub" class="loginGithub" title="Login with Github"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>&nbsp; Login with Github</button>
    </form>
}